---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
{% capture base_url %}{{ site.url }}{% endcapture %}
<rss xmlns:g="http://base.google.com/ns/1.0" version="2.0">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link rel="self" href="{{ base_url }}" />
    <description>{{ site.tagline | xml_escape }}</description>
    {% for post in site.posts %}
    {% capture post_id %}{{ post.url | remove: '-' | remove: '/' }}{% endcapture %}
    <item>
      <g:id>{{ post_id }}</g:id>
      <g:title>{{ post.title | xml_escape }}</g:title>
      <g:description>{{ post.excerpt | xml_escape }}</g:description>
      <g:image_link>{% if post.image %}{{ post.image }}{% else %}{{ base_url }}/images/default.png{% endif %}</g:image_link>
      <g:link>{{ base_url }}{{ post.url }}</g:link>
      <g:brand>{{ site.title | xml_escape }}</g:brand>
      <g:price>1 USD</g:price>
      <g:availability>in stock</g:availability>
      <g:condition>new</g:condition>
      <g:google_product_category>784</g:google_product_category>
    </item>
    {% endfor %}
  </channel>
</rss>
